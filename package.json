{
  "name": "jsonapi-util",
  "version": "1.4.0",
  "description": "Util for handling and parsing jsonapi response object",
  "main": "index.js",
  "scripts": {
    "test": "jest lib",
    "test-ci": "jest test lib && codecov"
  },
  "files": [
    "index.js",
    "lib",
    "!lib/*.spec.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alexaivars/jsonapi-util.git"
  },
  "keywords": [
    "json api",
    "json",
    "json-api",
    "jsonapi",
    "parser",
    "serializer",
    "util",
    "zerodeps"
  ],
  "author": "alexander aivars",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexaivars/jsonapi-util/issues"
  },
  "homepage": "https://github.com/alexaivars/jsonapi-util",
  "devDependencies": {
    "codecov": "^3.5.0",
    "jest": "^26.0.0"
  },
  "lint-staged": {
    "*.+(js|jsx|json|css|scss|md)": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js",
      "lib/*.js",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ]
  }
}
